<p id="notice"><%= notice %></p>

<h1>Hold Requests</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Student</th>
      <th>Is approved</th>
      <th>Day count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hold_requests.each do |hold_request| %>
      <tr>
        <td><%= hold_request.book_id %></td>
        <td><%= hold_request.student_id %></td>
        <td><%= hold_request.is_approved %></td>
        <td><%= hold_request.day_count %></td>
        <td><%= link_to 'Show', hold_request %></td>
        <td><%= link_to 'Edit', edit_hold_request_path(hold_request) %></td>
        <td><%= link_to 'Destroy', hold_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

