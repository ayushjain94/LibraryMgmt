<br><h1 class="h3 mb-3 font-weight-normal">Student Sign In</h1>

<div class="form-group">
  <%= bootstrap_form_with(model: @student, as: resource_name, url: session_path(resource_name),  local: true, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
<%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <%= f.password_field :password, autocomplete: "current-password" %>

  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
  <% end %>
    <%= f.submit "Log in", class: "btn btn-success" %>
<% end %>

<%= render "students/shared/links" %>

</div>
