<h2>Sign up</h2>

<%= bootstrap_form_with(model: @librarian, as: resource_name, url: registration_path(resource_name),  local: true, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f|  %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>

    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

    <%= f.text_field :name %>

    <%= f.select :library_id, Library.all.collect { |c| [c.name, c.id] }, { label: "Chose your library: ", wrapper: {class: "selectpicker"}} %>

    <%= f.submit "Sign up", class: "btn btn-success" %>
<% end %>

<%= render "librarians/shared/links" %>
