<p id="notice"><%= notice %></p>

<h3>ISSUED BOOKS</h3>

<table class="table table-hover row-clickable">
  <thead>
  <tr>
    <th>Isbn</th>
    <th>Title</th>
    <th>Issue date</th>
    <th>Fine</th>
    <th>Due date</th>
    <th>Author</th>
    <th>Language</th>
    <th>Publish date</th>
    <th>Edition</th>
    <th>Image</th>
    <th>Subject</th>
    <th>Summary</th>
    <th>Library</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @issues.each do |issue| %>
    <% book = Book.find(issue.book_id) %>
    <% lib = Library.find(book.library_id).name %>
    <% %>
    <tr>
      <td><%= book.isbn %></td>
      <td><%= book.title %></td>
      <td><%= issue.issued_from %></td>
      <% if Date.today > issue.due_date %>
        <td><%= (issue.due_date - Date.today).to_i * 10 %></td>
      <% else %>
        <td><%= 0.0 %></td>
      <% end %>
      <td><%= issue.due_date %></td>
      <td><%= book.author %></td>
      <td><%= book.language %></td>
      <td><%= book.publish_date %></td>
      <td><%= book.edition %></td>
      <td><%= image_tag book.image.url, width: '100px' if book.image.present? %></td>
      <td><%= book.subject %></td>
      <td><%= book.summary %></td>
      <td><%= lib %></td>
      <td><%= link_to 'Return', issues_return_path(issue), method: :post %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
